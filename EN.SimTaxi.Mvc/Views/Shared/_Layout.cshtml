<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SimTaxi</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" integrity="sha512-jnSuA4Ss2PkkikSOLtYs8BlYIeeIK1h99ty4YfvRPAlzr377vr3CXDb7sb7eEEBYjDtcYj+AjBH3FLv5uSJuXg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EN.SimTaxi.Mvc.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/images/logo.png" alt="SimTaxi Logo" height="28">
                    <span class="text-uppercase">simtaxi</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="Index">Cars</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Drivers" asp-action="Index">Drivers</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>


    <main role="main" class="pb-3">
        @RenderBody()
    </main>


    <div class="bg-section mt-3">

        <div class="container py-5">

            <div class="text-center">
                <h4 class="section-title text-sub-title">Join our Newsletter</h4>
                <p class="sub-section-title">Check out the great services we offer</p>
            </div>

            <div class="row">

                <div class="offset-lg-3 col-lg-6">

                    <div class="input-group mt-3">
                        <input type="text" class="form-control" placeholder="Enter your Email"
                               aria-label="Recipient's username" aria-describedby="button-addon2">
                        <button class="btn btn-warning text-light" type="button"
                                id="button-addon2">
                            Subscribe
                        </button>
                    </div>

                </div>

            </div>

        </div>

    </div>

    <footer>

        <div id="footer" class="container py-5">
            <div class="row">
                <div class="col-lg-3 mb-5 mb-lg-0">


                    <div class="text-body-secondary">
                        <h3 class="text-dark">SimTaxi</h3>
                        <div>Main Street</div>
                        <div>Amman, Sports Circle</div>
                        <div>Jordan</div>

                        <div class="mt-3">
                            <label for="phone" class="fw-bold">Phone:</label>
                            <a id="phone" class="text-decoration-none text-warning a-hover"
                               href="tel:+96277788899">+96277788899</a>
                        </div>
                        <div>
                            <label for="email" class="fw-bold">Email:</label>
                            <a id="email" class="text-decoration-none text-warning a-hover"
                               href="mailto:info@example.com">info@example.com</a>
                        </div>
                    </div>


                </div>

                <div class="col-lg-3 mb-5 mb-lg-0">
                    <h6 class="fw-bold mb-3">Useful Links</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2">
                            <a href="#" class="nav-link p-0 text-body-secondary">
                                <i class="fa-solid fa-chevron-right text-warning"></i>
                                Home
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a href="#" class="nav-link p-0 text-body-secondary">
                                <i class="fa-solid fa-chevron-right text-warning"></i>
                                About Us
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a href="#" class="nav-link p-0 text-body-secondary">
                                <i class="fa-solid fa-chevron-right text-warning"></i>
                                Services
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a href="#" class="nav-link p-0 text-body-secondary">
                                <i class="fa-solid fa-chevron-right text-warning"></i>
                                Term of Service
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a href="#" class="nav-link p-0 text-body-secondary">
                                <i class="fa-solid fa-chevron-right text-warning"></i>
                                Privacy Policy
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-3 mb-5 mb-lg-0">
                    <h6 class="fw-bold mb-3">Out Services</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2">
                            <a href="#" class="nav-link p-0 text-body-secondary">
                                <i class="fa-solid fa-chevron-right text-warning"></i>
                                Home
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a href="#" class="nav-link p-0 text-body-secondary">
                                <i class="fa-solid fa-chevron-right text-warning"></i>
                                About Us
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a href="#" class="nav-link p-0 text-body-secondary">
                                <i class="fa-solid fa-chevron-right text-warning"></i>
                                Services
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a href="#" class="nav-link p-0 text-body-secondary">
                                <i class="fa-solid fa-chevron-right text-warning"></i>
                                Term of Service
                            </a>
                        </li>
                        <li class="nav-item mb-2">
                            <a href="#" class="nav-link p-0 text-body-secondary">
                                <i class="fa-solid fa-chevron-right text-warning"></i>
                                Privacy Policy
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-3 mb-5 mb-lg-0">

                    <h5>Follow us of Social Media</h5>
                    <p>Monthly digest of what's new and exciting from us.</p>

                    <div class="d-flex social-links">

                        <a href="https://www.x.com" target="_blank" class="social-link p-2 rounded-circle text-light">
                            <i class="fa-brands fa-x-twitter"></i>
                        </a>

                        <a href="https://www.facebook.com" target="_blank"
                           class="social-link p-2 rounded-circle text-light ms-2">
                            <i class="fa-brands fa-facebook"></i>
                        </a>

                        <a href="https://www.instagram.com" target="_blank"
                           class="social-link p-2 rounded-circle text-light ms-2">
                            <i class="fa-brands fa-instagram"></i>
                        </a>

                        <a href="https://www.skype.com" target="_blank"
                           class="social-link p-2 rounded-circle text-light ms-2">
                            <i class="fa-brands fa-skype"></i>
                        </a>

                        <a href="https://www.linkedin.com" target="_blank"
                           class="social-link p-2 rounded-circle text-light ms-2">
                            <i class="fa-brands fa-linkedin"></i>
                        </a>
                    </div>

                </div>
            </div>
        </div>

        <div id="sub-footer" class="bg-section py-4 fs-7">
            <div class="container">

                <div class="d-flex justify-content-between">

                    <div>
                        &copy; Copyright <span class="fw-bold">MibAX</span>. All Rights Reserved
                    </div>

                    <div>
                        <span>Designed by</span>
                        <a href="https://www.mibax.com" class="text-warning">MibAX</a>
                    </div>

                </div>

            </div>
        </div>

    </footer>

    <div class="btn-back-to-top">
        <a href="#">
            <i class="fa-solid fa-arrow-up"></i>
        </a>
    </div>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js" integrity="sha512-7Pi/otdlbbCR+LnW+F7PwFcSDJOuUJB3OxtEHbg4vSMvzvJjde4Po1v4BR9Gdc9aXNUNFVUY+SK51wWT8WF0Gg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
