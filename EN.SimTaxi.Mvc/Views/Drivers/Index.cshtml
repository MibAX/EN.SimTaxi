@using EN.SimTaxi.Mvc.Models.Drivers
@model IEnumerable<DriverViewModel>

@{
    ViewData["Title"] = "Drivers";
}

<div class="container">

    <div class="d-flex justify-content-between align-items-center">

        <h1>Driver</h1>

        <a class="btn btn-primary" asp-action="Create">Create a New Driver</a>

    </div>

    <hr class="mt-1" />

    <table class="table mt-5">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var driver in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => driver.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => driver.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => driver.Gender)
                    </td>
                    <td>

                        <a asp-action="Edit" asp-route-id="@driver.Id" class="text-decoration-none" title="Edit">
                            <i class="fa-solid fa-pen"></i>
                        </a>

                        <a asp-action="Details" asp-route-id="@driver.Id" class="ms-2 text-decoration-none text-info" title="Details">
                            <i class="fa-solid fa-circle-info"></i>
                        </a>

                        <a class="ms-2 text-decoration-none text-danger pointer" title="Delete" data-bs-toggle="modal" data-bs-target="#deleteDriver_@driver.Id">
                            <i class="fa-solid fa-trash"></i>
                        </a>

                        <!-- Delete Modal -->
                        <div class="modal fade" id="deleteDriver_@driver.Id" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Driver</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <h5>
                                            Are you sure you want to delete <span class="text-danger">@driver.FullName</span>?
                                        </h5>
                                    </div>
                                    <div class="modal-footer">

                                        <form asp-action="Delete" class="mt-4">
                                            <input type="hidden" name="id" value="@driver.Id" />
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-danger ms-2">Delete</button>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
