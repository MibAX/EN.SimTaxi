@using EN.SimTaxi.Mvc.Models.Drivers
@model DriverDetailsViewModel

@{
    ViewData["Title"] = "Driver Details";
}

<div class="container">
    <h1>
        Driver Details
        <span class="text-primary">@Model.FullName</span>    
    </h1>

    <div>
        <hr />
        <dl class="row">

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FullName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FullName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Age)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Gender)
            </dd>

        </dl>
    </div>

    <hr />

    <h3>Driver Cars</h3>
    @if(Model.Cars.Count > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Plate Number</th>
                    <th>Model</th>
                    <th>Color</th>
                    <th>Year</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model.Cars)
                {
                    <tr>
                        <td>@car.PlateNumber</td>
                        <td>@car.Model</td>
                        <td>@car.Color</td>
                        <td>@car.Year</td>
                        <td>
                            <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id" class="text-decoration-none text-info" title="Details">
                                <i class="fa-solid fa-circle-info"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else {
        <h5 class="mb-5 text-muted">No cars assigned to this driver</h5>
    }
    

    <div>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        <a class="btn btn-primary ms-2" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    </div>

</div>
