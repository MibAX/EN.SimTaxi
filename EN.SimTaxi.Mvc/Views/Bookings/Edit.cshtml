@using EN.SimTaxi.Mvc.Models.Bookings
@model CreateUpdateBookingViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">

    <h1>
        Edit Booking
        <span class="text-primary">#@Model.Id</span>
    </h1>

    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="FromAddress" class="control-label"></label>
                    <input asp-for="FromAddress" class="form-control" />
                    <span asp-validation-for="FromAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="ToAddress" class="control-label"></label>
                    <input asp-for="ToAddress" class="form-control" />
                    <span asp-validation-for="ToAddress" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="BookingTime" class="control-label"></label>
                    <input asp-for="BookingTime" class="form-control" />
                    <span asp-validation-for="BookingTime" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="CarId" class="control-label"></label>
                    <select asp-for="CarId" class="form-control select-2" asp-items="@Model.CarLookup"></select>
                    <span asp-validation-for="CarId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="DriverId" class="control-label"></label>
                    <select asp-for="DriverId" class="form-control select-2" asp-items="@Model.DriverLookup"></select>
                    <span asp-validation-for="DriverId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="PassengerIds" class="control-label"></label>
                    <select asp-for="PassengerIds" class="form-control select-2" asp-items="@Model.PassengerLookup"></select>
                </div>
            </div>
        </div>

        <div class="form-group mt-4">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <input type="submit" value="Save" class="btn btn-primary ms-1" />
        </div>

    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
