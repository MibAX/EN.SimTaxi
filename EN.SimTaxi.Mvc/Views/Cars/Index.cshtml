@model IEnumerable<EN.SimTaxi.Mvc.Entities.Cars.Car>

@{
    ViewData["Title"] = "Cars";
}

<div class="container">

    <div class="d-flex justify-content-between align-items-center">

        <h1>Cars</h1>

        <a class="btn btn-primary" asp-action="Create">Create New Car</a>

    </div>


    <hr class="mt-1" />

    <table class="table mt-5">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Year)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PlateNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PowerType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CarType)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            { // 2 cars => 2 iteratons in the loop
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Color)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Year)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PlateNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PowerType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CarType)
                    </td>
                    <td>

                        <a asp-action="Edit" asp-route-id="@item.Id" class="text-decoration-none" title="Edit">
                            <i class="fa-solid fa-pen"></i>
                        </a>

                        <a asp-action="Details" asp-route-id="@item.Id" class="ms-2 text-decoration-none text-info" title="Details">
                            <i class="fa-solid fa-circle-info"></i>
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id" class="ms-2 text-decoration-none text-danger" title="Delete">
                            <i class="fa-solid fa-trash"></i>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
