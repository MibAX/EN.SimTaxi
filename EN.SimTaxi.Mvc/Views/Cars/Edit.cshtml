@using EN.SimTaxi.Mvc.Enums
@using EN.SimTaxi.Mvc.Models.Cars
@model CreateUpdateCarViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">

    <h1>
        Edit Car
        <span class="text-primary">@Model.Model - @Model.PlateNumber</span>
    </h1>

    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Color" class="control-label"></label>
                    <input asp-for="Color" class="form-control" />
                    <span asp-validation-for="Color" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="ProductionDate" class="control-label"></label>
                    <input asp-for="ProductionDate" class="form-control" />
                    <span asp-validation-for="ProductionDate" class="text-danger"></span>
                </div>
            </div>

        </div>

        <div class="row mt-3">
            <div class="col-md-4">
                <div class="form-group ">
                    <label asp-for="PlateNumber" class="control-label"></label>
                    <input asp-for="PlateNumber" class="form-control" />
                    <span asp-validation-for="PlateNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="PowerType" class="control-label"></label>
                    <select asp-for="PowerType" class="form-control" asp-items="@Html.GetEnumSelectList<PowerType>()"></select>
                    <span asp-validation-for="PowerType" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="CarType" class="control-label"></label>
                    <select asp-for="CarType" class="form-control" asp-items="@Html.GetEnumSelectList<CarType>()"></select>
                    <span asp-validation-for="CarType" class="text-danger"></span>
                </div>
            </div>

        </div>

        <div class="row mt-3">
            <div class="col-md-4">

                <div class="form-group">
                    <label asp-for="DriverId" class="control-label"></label>
                    <select asp-for="DriverId" class="form-control" asp-items="@Model.DriversLookup">
                        <option value="">-- Select a Driver --</option>
                    </select>
                    <span asp-validation-for="DriverId" class="text-danger"></span>
                </div>

            </div>
        </div>

        <div class="form-group mt-4">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary ms-2">Save</button>

        </div>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
